{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr class="d-flex justify-content-center">
            <img class="" src="/image/maison/{{ annonce.imagePath }}" alt="Card image cap">
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ annonce.address }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ annonce.price }}€ / nuit</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ annonce.size }} m²</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Couchage</th>
                <td>{{ annonce.couchage }}</td>
            </tr>
            <tr>
                <th>Reservation</th>
                {# <td>{{ annonce.reservation.date_debut }}</td>     #}
            </tr>
        </tbody>
    </table>

    <a href="/" class="btn btn-back text mt-5">Retour</a>

{% endblock %}
