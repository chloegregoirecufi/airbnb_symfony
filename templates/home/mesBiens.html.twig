{% extends "base.html.twig" %}
{% block body %}
{% if annonces|length > 0  %}
        <h1 class="text-center">Vos biens</h1>        
{% for annonce in annonces %}
        <div class="card m-5" style="width: 18rem;">
            <img class="card-img-top" src="/image/maison/{{ annonce.imagePath }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{annonce.address}}</h5>
                    <p class="card-text">{{annonce.price}}€ / nuit</p>
                    <p class="card-text">Nombre de couchage: {{annonce.couchage}}</p>
                    <p class="card-text">{{annonce.description}}</p>
                    <a href="/annonce/edit/{{annonce.id}}" class="btn btn-back text mt-5">Modifier</a>
                    <a href="/annonce/delete/{{annonce.id}}" class="btn btn-back text mt-5">Supprimé</a>

                </div>
        </div>
{% endfor %}
{% else %}
        <h1 class="text-center">Vous n'avez pas de biens renseignés</h1>
{% endif %}
    <div class="d-flex justify-content-center">
        <button class="btn btn-back text me-2 "><a href="/annonce/new"> Ajouter un bien </button></a>
        <button  class="btn btn-back text me-2 "><a href="/espaceUser">Retour à mon espace</br></a></button> 
    </div>
{% endblock %}